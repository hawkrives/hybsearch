{
  "name": "hybsearch-electron",
  "private": true,
  "version": "0.0.0",
  "description": "an electron gui for hybsearch",
  "repository": "hybsearch/hybsearch",
  "homepage": "https://hybsearch.github.io/",
  "license": "MIT",
  "author": "The Hybsearch Team <hybsearch@stolaf.edu>",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:setup && npm run build:app",
    "build:setup": "npm run clean && npm run build:copy && npm run build:js && npm run build:css",
    "build:app": "electron-builder --macos --windows --linux",
    "build:copy": "mkdir -p out/data && cp -v index.html index.css out/ && cp -rv ../data/*.gb ../data/*.fasta out/data/",
    "build:css": "PATH=$PATH:../node_modules/.bin; parcel build -t electron --no-minify --detailed-report --out-dir out index.css",
    "build:js": "PATH=$PATH:../node_modules/.bin; parcel build -t electron --no-minify --detailed-report --out-dir out index.js",
    "clean": "rm -rf dist/ out/",
    "pack": "electron-builder --dir",
    "test": "PATH=$PATH:../node_modules/.bin; jest",
    "lint": "cd .. && npm run lint",
    "p": "PATH=$PATH:../node_modules/.bin; pretty-quick",
    "prettify": "cd .. && npm run prettify",
    "pretty-check": "cd .. && npm run pretty-check",
    "start": "electron ./main.js"
  },
  "build": {
    "appId": "edu.stolaf.bio.hybsearch",
    "productName": "HybSearch",
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": "x64"
        }
      ],
      "category": "Education"
    },
    "files": [
      "out/",
      "main.js",
      "package.json",
      "node_modules/"
    ]
  },
  "dependencies": {
    "d3": "^3.5.17",
    "electron-is-dev": "^0.3.0",
    "electron-unhandled": "^1.1.0",
    "electron-updater": "^3.0.3",
    "json-stringify-safe": "^5.0.1",
    "lodash": "^4.17.11",
    "loud-rejection": "^1.6.0",
    "normalize.css": "^8.0.0",
    "pretty-ms": "^4.0.0",
    "public-ip": "^2.4.0"
  },
  "devDependencies": {
    "electron": "^2.0.11",
    "spectron": "^4.0.0"
  }
}
