{
  "name": "hybsearch-electron",
  "private": true,
  "version": "0.0.0",
  "description": "an electron gui for hybsearch",
  "repository": "hybsearch/hybsearch",
  "homepage": "https://hybsearch.github.io/",
  "license": "MIT",
  "author": "The Hybsearch Team <hybsearch@stolaf.edu>",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:setup && npm run build:app",
    "build:setup": "npm run clean && npm run build:copy && npm run build:js && npm run build:css",
    "build:app": "electron-builder --macos --windows --linux",
    "build:copy": "mkdir -p out/data && cp -v index.html index.css out/ && cp -rv ../data/*.gb out/data/",
    "build:css": "parcel build -t electron --no-minify --detailed-report --out-dir out index.css",
    "build:js": "parcel build -t electron --no-minify --detailed-report --out-dir out index.js",
    "clean": "rm -rf dist/ out/",
    "pack": "electron-builder --dir",
    "test": "PATH=$PATH:../node_modules/.bin; jest",
    "lint": "cd .. && npm run lint",
    "prettify": "cd .. && npm run prettify",
    "pretty-check": "cd .. && npm run pretty-check",
    "start": "electron ./main.js"
  },
  "build": {
    "appId": "edu.stolaf.bio.hybsearch",
    "productName": "HybSearch",
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": "x64"
        }
      ],
      "category": "Education"
    },
    "files": [
      "out/",
      "main.js",
      "package.json",
      "node_modules/"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.8.3"
          }
        }
      ],
      "react",
      "flow"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "d3": "^3.5.17",
    "electron-is-dev": "^0.3.0",
    "electron-unhandled": "^0.2.0",
    "electron-updater": "^2.21.1",
    "lodash": "^4.17.5",
    "loud-rejection": "^1.6.0",
    "material-components-web": "^0.34.1",
    "material-icons": "^0.2.1",
    "normalize.css": "^7.0.0",
    "pretty-ms": "^3.1.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "rmwc": "^1.5.1",
    "styled-components": "^3.2.5",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "electron": "^1.8.3",
    "spectron": "^3.8.0"
  }
}
