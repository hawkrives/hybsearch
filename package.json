{
  "name": "@hybsearch/hybsearch",
  "private": true,
  "version": "4.0.0-beta.5",
  "description": "Find nonmonophyly in genetic sequences",
  "repository": "hybsearch/hybsearch",
  "homepage": "https://hybsearch.github.io/",
  "main": "main.js",
  "license": "MIT",
  "author": "The Hybsearch Team <hybsearch@stolaf.edu>",
  "scripts": {
    "start": "electron ./main.js",
    "test": "jest",
    "lint": "eslint --cache 'server/**/*.js' 'server/**/hyb-*' 'electron/**/*.js'",
    "pretty-check": "npm run prettier -- --list-different",
    "prettier": "prettier --write 'server/**/*.js' 'server/**/hyb-*' 'electron/**/*.{js,css}'"
  },
  "prettier": {
    "overrides": [
      {
        "files": "server/**/hyb-*",
        "options": {
          "parser": "babylon"
        }
      },
      {
        "files": "{package,package-lock}.json",
        "options": {
          "requirePragma": true
        }
      }
    ],
    "useTabs": true,
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "jest": {
    "verbose": true
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "expect": "^22.4.0",
    "jest": "^22.4.2",
    "prettier": "1.11.1"
  }
}
